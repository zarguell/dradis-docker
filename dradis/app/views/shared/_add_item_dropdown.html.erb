<div class="dropdown">
  <% if local_assigns[:new_path] %>
    <%= link_to 'javascript:void(0)',
      class: local_assigns.fetch(:button_class, '') + ' dropdown-toggle',
      data: { name: name.downcase, bs_toggle: 'dropdown' } do %>
      <i class="fa fa-plus"> </i> <%= local_assigns.fetch(:text, '') %><span class="visually-hidden">Add <%= name.downcase %></span>
    <% end %>

    <%= render 'shared/templates_dropdown', name: name, new_path: new_path, category_id: category_id, menu_class: menu_class %>
  <% end %>

  <%= link_to "##{name.downcase}", data: { bs_toggle: 'collapse', behavior: 'collapse-collection' }, class: local_assigns.fetch(:collapse_class, '') do %>
    <i class="fa fa-chevron-up" data-behavior="toggle-chevron"></i><span class="visually-hidden">Toggle <%= name.downcase %> list</span>
  <% end %>
</div>
